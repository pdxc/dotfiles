# Precursors for cloning dotfiles repo
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

echo >> /Users/pdxc/.zprofile
echo 'eval "$(/opt/homebrew/bin/brew shellenv)"' >> /Users/pdxc/.zprofile
eval "$(/opt/homebrew/bin/brew shellenv)"

brew install git
# git config --global user.email "<todo-insert-email-here>"
git config --global user.name "pdxc"

# Clone dotfiles repo
git clone https://github.com/pdxc/dotfiles.git
cd dotfiles
git push -u origin master
popd

mkdir code